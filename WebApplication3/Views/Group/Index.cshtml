@model IEnumerable<WebApplication3.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form class="form-inline my-2 my-lg-0" asp-action="Search" asp-controller="Group">
    <select asp-items="ViewBag.SchoolID" name="schoolid" size=1.5 style="width:300px ; height:30px" ></select>
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button>
</p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School.SchoolName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>